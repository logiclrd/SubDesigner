<UserControl x:Class="SubDesigner.BackgroundColourPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:SubDesigner"
             Background="White">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Margin="4" FontFamily="Anxiety Management" FontSize="40">
            <TextBlock>
                <Run>Select background colour</Run>
                <Run FontFamily="Segoe Script">:</Run>
            </TextBlock>
        </Label>
        <src:ColourPicker Margin="4 0" Height="250" x:Name="cpColour" ColourSelected="cpColour_ColourSelected" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="4" MinWidth="100" Padding="8 12 8 8" FontFamily="Anxiety Management" FontSize="30" Name="cmdSet" Click="cmdSet_Click">Set</Button>
            <Button Margin="4" MinWidth="100" Padding="8 12 8 8" FontFamily="Anxiety Management" FontSize="30" Name="cmdCancel" Click="cmdCancel_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
